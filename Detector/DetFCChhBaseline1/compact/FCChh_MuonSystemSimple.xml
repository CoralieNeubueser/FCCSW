<?xml version="1.0" encoding="UTF-8"?>
<lccdd xmlns:compact="http://www.lcsim.org/schemas/compact/1.0"
       xmlns:xs="http://www.w3.org/2001/XMLSchema"
       xs:noNamespaceSchemaLocation="http://www.lcsim.org/schemas/compact/1.0/compact.xsd">

  <info name="FCC"
        title="Simple tag layer in muon system"
        author="J. Lingemann, C Neubueser"
        url="no"
        status="development"
        version="1.0">
    <comment>Muon System Place-Holder</comment>
  </info>
  <display>
    <vis name="MuonEnvelopeVis" r="0.87" g="0.5" b="0.0" a="0.2" showDaughters="false" visible="true"/>
    <vis name="MuonEnvelopeEndcapVis" r="0.91" g="0.64" b="0.29" a="0.2" showDaughters="false" visible="true"/>
    <vis name="MuonEnvelopeFwdVis" r="0.90" g="0.72" b="0.48" a="0.2" showDaughters="false" visible="true"/>
  </display>
  <define>
    <constant name="MuonSpacer" value="30*mm/2." />
  </define>

  <readouts>
    <readout name="Muons_Readout">
      <!-- Introduce a segmentation in eta and phi -->
      <segmentation type="GridPhiEta" grid_size_eta="0.01" phi_bins="256"/>
      <id>system:4,side:4,eta:-11,phi:-10</id>
    </readout>
  </readouts>

  <detectors>
    <!-- Barrel -->
    <detector id="BarMuon_id" name="MuonEnvelope" type="SimpleCylinderSensitive" readout="Muons_Readout" vis="MuonEnvelopeVis">
      <comment>Envelope for Muon Barrel</comment>
      <dimensions rmin="BarMuon_rmax2" rmax="BarMuon_rmax2+MuonSpacer" dz="BarMuon_z2-MuonSpacer" phi0="0" deltaphi="360*deg" z_offset="0*cm" material="Aluminum"/>
    </detector>
    <detector name="MuonEnvelopeExtBarrelPos" type="SimpleCylinderSensitive" readout="Muons_Readout" vis="MuonEnvelopeVis">
      <comment>Envelope for Muon extended Barrel</comment>
      <dimensions rmin="BarMuon_rmin1" rmax="BarMuon_rmax1" dz="MuonSpacer" phi0="0" deltaphi="360*deg" z_offset="BarMuon_z2" material="Aluminum"/>
    </detector>
    <detector name="MuonEnvelopeExtBarrelNeg" type="SimpleCylinderSensitive" readout="Muons_Readout" vis="MuonEnvelopeVis">
      <comment>Envelope for Muon extended Barrel</comment>
      <dimensions rmin="BarMuon_rmin1" rmax="BarMuon_rmax1" dz="MuonSpacer" phi0="0" deltaphi="360*deg" z_offset="-BarMuon_z2" material="Aluminum"/>
    </detector>
    <!-- End-caps -->
    <detector id="EndCapMuon_id" name="MuonEnvelopeEndcapPos" type="SimpleCylinderSensitive" readout="Muons_Readout" vis="MuonEnvelopeEndcapVis">
        <comment>Envelope for Muon positive end-cap</comment>
        <dimensions rmin="EndCapMuon_rmin1" rmax="EndCapMuon_rmax2" dz="MuonSpacer" phi0="0" deltaphi="360*deg" z_offset="EndCapMuon_zOffset-EndCapMuon_dz" material="Aluminum"/>
    </detector>
    <detector name="MuonEnvelopeEndcapNeg" type="SimpleCylinder" vis="MuonEnvelopeEndcapVis">
        <comment>Envelope for Muon positive end-cap</comment>
        <dimensions rmin="EndCapMuon_rmin1" rmax="EndCapMuon_rmax2" dz="MuonSpacer" phi0="0" deltaphi="360*deg" z_offset="-EndCapMuon_zOffset+EndCapMuon_dz" material="Aluminum"/>
    </detector>
    <!-- Forward detectors -->
<!-- not needed for the punch-through tag
    <detector id="FwdBarMuon_id" name="MuonEnvelopeFwdBarPos" type="SimpleCylinderSensitive" readout="Muons_Readout" vis="MuonEnvelopeFwdVis">
        <comment>Envelope for forward Muon in Barrel positive</comment>
        <dimensions rmin="FwdBarMuon_rmin" rmax="FwdMuon_rmax" dz="FwdBarMuon_dz-MuonSpacer/2.0" phi0="0" deltaphi="360*deg" z_offset="FwdBarMuon_zOffset+MuonSpacer" material="Aluminum"/>
    </detector>
   <detector name="MuonEnvelopeFwdBarNeg" type="SimpleCylinder" vis="MuonEnvelopeFwdVis">
        <comment>Envelope for forward Muon in Barrel negative</comment>
        <dimensions rmin="FwdBarMuon_rmin" rmax="FwdBarMuon_rmax" dz="FwdBarMuon_dz-MuonSpacer/2.0" phi0="0" deltaphi="360*deg" z_offset="-FwdBarMuon_zOffset-MuonSpacer" material="Aluminum"/>
    </detector>
-->
    <detector id="FwdMuon_id" name="MuonEnvelopeFwdPos" type="SimpleCylinderSensitive" readout="Muons_Readout" vis="MuonEnvelopeFwdVis">
        <comment>Envelope for forward Muon positive</comment>
        <dimensions rmin="FwdMuon_rmin" rmax="FwdMuon_rmax" dz="MuonSpacer" phi0="0" deltaphi="360*deg" z_offset="FwdMuon_zOffset-FwdMuon_dz" material="Aluminum"/>
    </detector>
    <detector name="MuonEnvelopeFwdNeg" type="SimpleCylinder" vis="MuonEnvelopeFwdVis">
        <comment>Envelope for forward Muon positive</comment>
        <dimensions rmin="FwdMuon_rmin" rmax="FwdMuon_rmax" dz="MuonSpacer" phi0="0" deltaphi="360*deg" z_offset="-FwdMuon_zOffset+FwdMuon_dz" material="Aluminum"/>
    </detector>
  </detectors>
</lccdd>
